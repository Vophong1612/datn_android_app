<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_image_product"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        tools:src="@color/palattes_3"
        app:layout_constraintDimensionRatio="1:1.333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:textColor="@color/palattes_1"
        android:textSize="15sp"
        android:maxWidth="150dp"
        app:layout_constraintTop_toTopOf="@id/item_image_product"
        app:layout_constraintStart_toEndOf="@id/item_image_product"
        tools:text="Guangzhou sweater"/>

    <TextView
        android:id="@+id/item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/palattes_1_50"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textStyle="italic"
        android:textSize="12sp"
        android:maxWidth="150dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintStart_toStartOf="@id/item_name"
        tools:text="Size: XL"/>

    <TextView
        android:id="@+id/item_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/palattes_1_50"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textStyle="italic"
        android:textSize="12sp"
        android:maxWidth="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintStart_toEndOf="@id/item_size"
        tools:text="Color: Red"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/palattes_2"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sf_pro_text_bold"
        app:layout_constraintStart_toStartOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_size"
        tools:text="200.000 VND" />

    <TextView
        android:id="@+id/item_totalProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintStart_toStartOf="@id/item_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="x1" />

</androidx.constraintlayout.widget.ConstraintLayout>