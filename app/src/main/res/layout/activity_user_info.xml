<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:background="@color/light_gray">

        <include
            android:id="@+id/back_layout"
            layout="@layout/layout_back_save_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/avtLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp">
            <ImageView
                android:background="@drawable/bg_frame_image"
                android:id="@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_camera"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_user_info"
            app:layout_constraintTop_toTopOf="@id/avtLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/fullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:text="@string/full_name_label"
            android:textColor="@color/palattes_1"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/fullNameEdt" />

        <EditText
            android:id="@+id/fullNameEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_edt_radius_pressed"
            android:hint="@string/full_name_edt_hint"
            android:paddingStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullNameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/phoneNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_label"
            android:textColor="@color/palattes_1"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/phoneNumberEdt"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEdt" />

        <EditText
            android:id="@+id/phoneNumberEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_edt_radius_pressed"
            android:hint="@string/phone_number_edt_hint"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullNameEdt"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEdt"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberEdt"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/ll_user_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/phoneNumberEdt"
                app:layout_constraintStart_toStartOf="@id/phoneNumberEdt"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/birthdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/birthday_label"
                    android:textColor="@color/palattes_1"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <EditText
                        android:id="@+id/birthdayEdt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_edt_radius_pressed"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:enabled="false"
                        android:hint="@string/birthday_edt_hint"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_choose_date"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_info_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/phoneNumberEdt"
                app:layout_constraintStart_toStartOf="@id/phoneNumberEdt"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/genderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/gender_label"
                    android:textColor="@color/palattes_1"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/genderEdt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_edt_radius_pressed"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/addressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/address_label"
            android:textColor="@color/palattes_1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/ll_user_info"
            app:layout_constraintBottom_toTopOf="@id/relative_layout_address"
            app:layout_constraintStart_toStartOf="@id/relative_layout_address" />

        <RelativeLayout
            android:id="@+id/relative_layout_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_user_info">

            <EditText
                android:id="@+id/addressEdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/bg_edt_radius_pressed"
                android:enabled="false"
                android:hint="@string/address_edt_hint"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow_forward"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:textColor="@color/palattes_1"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/emailEdt"
            app:layout_constraintStart_toStartOf="@id/emailEdt" />

        <EditText
            android:id="@+id/emailEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_edt_radius_pressed"
            android:hint="@string/email_edt_hint"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relative_layout_address"
            tools:ignore="RtlSymmetry" />

        <View
            app:layout_constraintTop_toBottomOf="@id/view_user_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/changePasswordLabel"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/view_user_info"
            app:layout_constraintStart_toStartOf="@id/relative_layout_curr_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/change_password_label"
            android:textColor="@color/palattes_1"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/relative_layout_curr_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changePasswordLabel">

            <EditText
                android:id="@+id/changePasswordEdt"
                tools:ignore="RtlSymmetry"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:enabled="false"
                android:background="@drawable/bg_edt_radius_pressed"
                android:paddingStart="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_arrow_forward"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

